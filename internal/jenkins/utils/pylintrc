[FORMAT]
# Maximum number of characters on a single line.
max-line-length = 120

# Ignore imports when computing similarities / duplicate code
ignore-imports = yes

# Enforce the LF line ending format
expected-line-ending-format = LF

# Enforce a minimum lines of similarity
min-similarity-lines = 50

# Fix pylint import-error for local modules
init-hook = 'import sys; sys.path.append("."); sys.path.append("tests")'
